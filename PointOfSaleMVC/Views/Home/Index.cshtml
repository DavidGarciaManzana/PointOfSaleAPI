@{
    ViewData["Title"] = "Home Page";
}
@{
    DateTime Today = DateTime.Now;
    string User = "User";
}

<div class="container-card">
    @if(@Today.ToString("tt").Contains("a. m."))
    {
        <h2 class="display-4">Good morning! @User</h2>
    }
    else if(@Today.ToString("tt").Contains("p. m.") && Int16.Parse(@Today.ToString("hh"))  < 5)
    {
        <h2 class="display-4">Good afternoon! @User</h2>
    }
    else if(@Today.ToString("tt").Contains("p. m.") && Int16.Parse(@Today.ToString("hh"))  > 5 && Int16.Parse(@Today.ToString("hh"))  < 8)
    {
        <h2 class="display-4">Good evening! @User</h2>
    }
    else if(@Today.ToString("tt").Contains("p. m.") && Int16.Parse(@Today.ToString("hh"))  > 8)
    {
        <h2 class="display-4">Good night! @User</h2>
    }
    </div>
